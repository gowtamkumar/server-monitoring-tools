# Example .env file for VPS Monitoring

# ===================================
# EXECUTION MODE
# ===================================
# 'remote' = Run on your PC, connect to VPS via SSH
# 'local'  = Run directly on VPS, monitor localhost
MODE=local

# ===================================
# VPS CREDENTIALS (for remote mode)
# ===================================
VPS_HOST=your.vps.ip.address
VPS_USERNAME=root
VPS_PASSWORD=your_password_here

# ===================================
# API SERVER SETTINGS
# ===================================
# Port for the API server
API_PORT=4000

# Optional API key for authentication
# Leave empty to disable authentication
# API_KEY=your_secret_api_key_here
API_KEY=

# Enable CORS (allow cross-origin requests)
ENABLE_CORS=true

# Cache refresh interval in milliseconds (default: 30000 = 30 seconds)
REFRESH_INTERVAL=30000

# ===================================
# MONITORING CONFIGURATION
# ===================================
# Services to monitor (comma-separated)
# Common: nginx, docker, php-fpm, mysql, postgresql, redis
SERVICES=nginx,docker

# Enable bandwidth monitoring via iftop (requires root)
ENABLE_BANDWIDTH=true

# Enable automatic container log collection for high CPU containers
ENABLE_CONTAINER_LOGS=true

# Number of top processes to show
TOP_PROCESS_COUNT=10

# Number of log lines to collect from containers
CONTAINER_LOG_LINES=50
